<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:layoutDirection="rtl"
    android:windowSoftInputMode="adjustResize"
    android:layout_gravity="right"
    android:scrollbars="vertical">


<LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_height="fill_parent"
    >

    <!--name text-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:text="שם מלא"
            android:textColor="#9b9b9b"
            android:textSize="15sp"
            />
    <!--name edit text-->
        <EditText
            android:id="@+id/ContactName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:maxLines="1"
            android:backgroundTint="#37474f"
            android:textColor="#37474f"
            android:imeOptions="actionNext"
            />
    <!--phone text-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="מספר טלפון לחזרה"
        android:layout_marginTop="20dp"
        android:textColor="#9b9b9b"
        android:textSize="15sp" />
    <!--phone edit text-->
    <EditText
        android:id="@+id/ContactPhone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#37474f"
        android:inputType="number"
        android:gravity="left"
        android:maxLength="10"
        android:maxLines="1"
        android:textColor="#37474f"
        android:textSize="22sp"
        android:imeOptions="actionNext"
        android:nextFocusDown="@id/ContentRequestSpinner"
        />
    <!--Request type text-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="נושא הפנייה"
        android:textColor="#9b9b9b"
        android:layout_marginTop="20dp"
        android:textSize="15sp" />
    <!--RequestType-->
    <Spinner
        android:id="@+id/ContentRequestSpinner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawSelectorOnTop="true"
        android:layout_marginTop="15dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:spinnerMode="dialog"
        android:popupElevation="10dp"
        android:textColor="#37474f"
        android:textSize="22sp"
        android:imeOptions="actionNext"
        android:nextFocusDown="@id/ContactContent"


        />
    <!--content  text-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:text="תוכן הפנייה"
        android:textColor="#9b9b9b"
        android:textSize="15sp" />
    <!--Content-->
    <EditText
        android:id="@+id/ContactContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:scrollbarStyle="insideInset"
        android:overScrollMode="always"
        android:scrollbars="vertical"
        android:maxLines="3"
        android:textColor="#37474f"
        android:textSize="18sp"
        />
    <!--Sign in Button-->
    <Button
        android:id="@+id/btnSEND"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/signinbox"
        android:text="שלח"
        android:textColor="#ffffff"
        android:textSize="21sp" />
    <!--progress bar-->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:indeterminateTint="#37474f" />
</LinearLayout>

</ScrollView>



