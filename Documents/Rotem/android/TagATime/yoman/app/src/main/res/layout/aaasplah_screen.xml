<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#37474f"
    android:layoutDirection="ltr"
    tools:context="il.co.yoman.yoman.splahScreen">


    <!--logo-->
    <android.support.percent.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent= "13.5%"
        app:layout_widthPercent= "86%"
        app:layout_marginTopPercent= "9%"
        app:layout_marginStartPercent="7%"
        >
        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/yoman3x"
            />
    </android.support.percent.PercentRelativeLayout>

    <!--text-->
    <android.support.percent.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent= "7%"
        app:layout_widthPercent= "80%"
        app:layout_marginTopPercent= "23%"
        app:layout_marginStartPercent="10%"
        >
        <TextView
            android:id="@+id/text"
            android:textSize="17sp"
            android:gravity="center"
            android:fontFamily="@font/rubik"
            android:text="יומן - זימון תורים, פגישות ואירועים"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            />

    </android.support.percent.PercentRelativeLayout>

 <!--pic-->
    <android.support.percent.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent= "52%"
        app:layout_widthPercent= "92%"
        app:layout_marginTopPercent= "36%"
        app:layout_marginStartPercent="4%"
        >
        <ImageView
            android:id="@+id/pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/istockpic"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </android.support.percent.PercentRelativeLayout>











</android.support.percent.PercentRelativeLayout>