<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff4081" />
            <gradient android:angle="-90" android:startColor="#ff79b0" android:endColor="#c60055"  />
        </shape>

    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff4081" />
            <solid android:color="#c60055"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff4081" />
            <gradient android:angle="-90" android:startColor="#ff4081" android:endColor="#ff79b0" />
        </shape>
    </item>
</selector>