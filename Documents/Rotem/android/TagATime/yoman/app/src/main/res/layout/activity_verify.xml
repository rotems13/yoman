<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containerVerifyac"
    android:layoutDirection="rtl"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--botoom grey-->
    <android.support.percent.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent= "100%"
        app:layout_widthPercent= "100%"
        app:layout_marginTopPercent= "0%"
        android:background="#f5f5f5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        ignParentStart="true">

        <!--verification text-->
        <android.support.percent.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            app:layout_heightPercent= "6%"
            app:layout_widthPercent= "100%"
            app:layout_marginTopPercent= "3%"
            app:layout_marginStartPercent="5%"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/countAccount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="קוד אימות"
                android:textSize="18sp"
                android:textColor="#9b9b9b"
                />
        </android.support.percent.PercentRelativeLayout>
        <!--Edit text Mobile-->
        <android.support.percent.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent= "18%"
            app:layout_widthPercent= "90%"
            android:gravity="center"
            app:layout_marginTopPercent= "8%"
            app:layout_marginStartPercent="5%"

            >
            <me.philio.pinentry.PinEntryView
                android:id="@+id/edVerifyNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:digitBackground="@android:color/white"
                app:pinInputType="number"
                app:mask=""
                app:accentType="character"
                app:digitTextSize="15sp"
                android:foregroundGravity="center"
                app:digitTextColor="#37474f"
                app:digitElevation="10dp" />

        </android.support.percent.PercentRelativeLayout>
        <!--Sign in Button-->
        <android.support.percent.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent= "9.9%"
            app:layout_widthPercent= "90%"
            app:layout_marginTopPercent= "24%"
            app:layout_marginStartPercent="5%"
            >
            <Button
                android:id="@+id/btnVerify"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="21sp"
                android:text="אמת קוד"
                android:textColor="#ffffff"
                android:background="@drawable/whitebox"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </android.support.percent.PercentRelativeLayout>
        <!--counter text-->
        <android.support.percent.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent= "6%"
            app:layout_widthPercent= "70%"
            app:layout_marginTopPercent= "37%"
            app:layout_marginStartPercent="5%"
            >
            <TextView
                android:id="@+id/countertext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="במידה ולא קיבלת הודעה נסה שנית"
                android:textSize="16sp"
                android:textColor="#9b9b9b"
                />
        </android.support.percent.PercentRelativeLayout>
        <!--counter-->
        <android.support.percent.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent= "6%"
            app:layout_widthPercent= "25%"
            app:layout_marginTopPercent= "37%"
            app:layout_marginStartPercent="75%"
            >
            <TextView
                android:id="@+id/counter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="בעוד 30 שניות"
                android:textSize="16sp"
                android:textColor="#9b9b9b"
                />
        </android.support.percent.PercentRelativeLayout>
        <!--contact-->
        <android.support.percent.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="7%"
            app:layout_widthPercent="72.6%"
            app:layout_marginStartPercent="13.2%"
            app:layout_marginTopPercent="55%"
            >
            <TextView
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="צור קשר"
                android:gravity="center"
                android:textColor="#9b9b9b"
                android:textSize="16sp" />
        </android.support.percent.PercentRelativeLayout>
        <!--progress bar-->
        <android.support.percent.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="20%"
            app:layout_marginStartPercent="40%"
            app:layout_marginTopPercent="40%"
            app:layout_widthPercent="20%">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminateTint="#37474f" />
        </android.support.percent.PercentRelativeLayout>

    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>