<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:backgroundTint="#f4f4f4"
    android:layoutDirection="rtl"
    tools:context="il.co.yoman.yoman.Account.futureEvents"
    >

    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/datecontainer"
        android:windowSoftInputMode = "stateAlwaysHidden"
        android:background="#f4f4f4"
        tools:context="il.co.yoman.yoman.Account.webViewFrag">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent= "100%"
            app:layout_widthPercent= "100%">


        <TextView
        android:id="@+id/dateholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#13000000"
        android:text="תאריך"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent" />

        </android.support.percent.PercentRelativeLayout>

    </android.support.percent.PercentRelativeLayout>



    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/futureContainer"
        android:layout_marginTop="30dp"
        android:windowSoftInputMode = "stateAlwaysHidden"
        android:background="#f4f4f4"
        tools:context="il.co.yoman.yoman.Account.webViewFrag">

        <!--startTime-->
        <android.support.percent.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent= "16.5%"
            app:layout_widthPercent= "13%"
            app:layout_marginTopPercent= "6%"
            app:layout_marginStartPercent="2%"
            >
            <TextView
                android:id="@+id/startTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="8pt"
                android:gravity="start"
                android:text="10:00"
                android:textColor="#6aacf9" />

        </android.support.percent.PercentRelativeLayout>

        <!--FinishTime-->
        <android.support.percent.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent= "16.5%"
            app:layout_widthPercent= "13%"
            app:layout_marginTopPercent= "77%"
            app:layout_marginStartPercent="2%"
            >
            <TextView
                android:id="@+id/FinishTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="8pt"
                android:gravity="start"
                android:textColor="#6aacf9" />

        </android.support.percent.PercentRelativeLayout>

        <!--Line-->
        <android.support.percent.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent= "85%"
            app:layout_widthPercent= "1%"
            app:layout_marginTopPercent= "6%"
            app:layout_marginStartPercent="15%"
            >

            <TextView
                android:id="@+id/verticalLine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:background="#6aacf9"
                />
        </android.support.percent.PercentRelativeLayout>

        <!--whiteBox-->
        <android.support.percent.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent= "85%"

            app:layout_widthPercent= "80%"
            app:layout_marginTopPercent= "6%"
            app:layout_marginStartPercent="17%"
            >

            <TextView
                android:id="@+id/whiteBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:background="@drawable/whiteboxshadow"
                />
        </android.support.percent.PercentRelativeLayout>

        <!--Create-->
        <android.support.percent.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent= "16.5%"
            app:layout_widthPercent= "35%"
            app:layout_marginTopPercent= "9%"
            app:layout_marginStartPercent="19%"
            >
            <TextView
                android:id="@+id/create"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="8pt"
                android:text="Asia Medical"
                android:textColor="#9b9b9b" />

        </android.support.percent.PercentRelativeLayout>

        <!--picTitle-->
        <android.support.percent.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent= "11.5%"
            app:layout_widthPercent= "6%"
            app:layout_marginTopPercent= "25%"
            app:layout_marginStartPercent="18%"
            >
            <ImageView
                android:id="@+id/picTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                android:text="Asia Medical"
                android:textColor="#9b9b9b" />

        </android.support.percent.PercentRelativeLayout>

        <!--Title-->
        <android.support.percent.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent= "30%"
            app:layout_widthPercent= "70%"
            app:layout_marginTopPercent= "25%"
            app:layout_marginStartPercent="25%"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="8pt"
                android:text="Andy Irons - One on One Training base jumping extreme fit workoutl"
                android:textColor="#4a4a4a" />

        </android.support.percent.PercentRelativeLayout>

        <!--status-->
        <android.support.percent.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent= "21%"
            app:layout_widthPercent= "70%"
            app:layout_marginTopPercent= "75%"
            app:layout_marginStartPercent="25%"
            >
            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="7pt"
                android:text="מאושר"
                android:textColor="#9e9e9e" />

        </android.support.percent.PercentRelativeLayout>

        <!--picStatus-->
        <android.support.percent.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent= "8.2%"
            app:layout_widthPercent= "2.5%"
            app:layout_marginTopPercent= "75.8%"
            app:layout_marginStartPercent="20%"
            >
            <TextView
                android:id="@+id/picStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#49c2e2"
                />

        </android.support.percent.PercentRelativeLayout>

    </android.support.percent.PercentRelativeLayout>


</android.support.v7.widget.CardView>
